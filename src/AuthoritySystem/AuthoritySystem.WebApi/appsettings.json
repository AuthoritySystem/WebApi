{
  "Serilog": {
    "MinimumLevel": {
      // 最小日志记录级别
      "Default": "Debug",
      // 系统日志最小记录级别
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Async", // 异步写入日志
        "Args": {
          "configure": [
            {
              "Name": "File", //输出文件
              "Args": {
                "path": "D:Logs/logs.txt", // 日志输出路径，可以是绝对路径，也可以是相对路径
                "outputTemplate": "{NewLine}Date:{Timestamp:yyyy-MM-dd HH:mm:ss.fff}{NewLine}LogLevel:{Level}{NewLine}Class:{SourceContext}{NewLine}Message:{Message}{NewLine}{Exception}",
                "rollingInterval": "3" //日志文件生成精度：1：年  2：月 3：日 4：小时
              }
            }
          ]
        }
      },
      // 输出到控制台
      { "Name": "Console" }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "AllowedHosts": "*",
  // 数据库
  "DbConfig": {
    // 数据库类型
    "DbType": "PostgreSQL",
    // 连接字符串
    "DbConnection": "User ID=postgres;Password=1qaz@WSX;Host=10.10.10.201;Port=5432;Database=AuthoritySystem;Pooling=true;"
  }
}
